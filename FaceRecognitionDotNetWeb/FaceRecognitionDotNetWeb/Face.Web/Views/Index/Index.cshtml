            },
            success: function (res) {
                debugger 
            }
        });
    }

    $(function () { 

        $("#sb").on("click", function () {
            var data = new FormData();
            var files = $("#File1").get(0).files;
            if (files.length > 0) {
                for (var i = 0; i < files.length; i++) {
                    data.append(i.toString(), files[i]);
                }
            };
            $.ajax({
                type: "post",
                url: "/Index/Upload",
                contentType: false,
                cache: false,
                currentType: false,
                processData: false,
                data: data,
                success: function (res) {  
                    var img = $("#yt");
                    $(img).attr('src', res.filePath);
                    base64(res.filePath, function (data) {
                        FaceEntry(data,"testData");
                    }); 
                }
            });
        }); 

        $("#base64").click(function () { 
            FaceEntry(baseData, "testData");
        });

        $("#test").click(function () {

            $.ajax({
                type: "post",
                contentType: "application/json;charset=utf-8",
                url: "http://192.168.1.73:8099/Home/test3",
                contentType: false,
                cache: false,
                currentType: false,
                processData: false,
                data: {par:"web"},
                success: function (res) {
                    alert(res);
                }
            });

            $.post('http://192.168.1.73:8099/Home/test2', { par: "web" }, function (text, status) { alert(text); });

            $.ajax({
                type: "post",
                url: "http://192.168.1.73:8099/Home/test2",
                data: { par: "web" },
                success: function (res) {
                    alert(res);
                }
            });
        });
    });

</script>

